fn main() {
  print(add(1, 2), "\n");

  print("Hello, World!\n");

  print(5 == 5, 5==6, 5 > 6, 5 < 6 < 7, "\n");

  if 5 == 7 {
    print("It does\n");
  } else {
    print("It does not\n");
  }

  let mut a = 5;
  while a >= 0 {
    print(a);
    a = a - 1;
  }
  print("\n");

  let mut b = 5;
  pass_by_value(b);
  pass_by_ref(&b);

  mutate_by_ref(&mut b);
  print(b, "\n");
}

fn pass_by_value(a: Int) {
  print(a, "\n");
}

fn pass_by_ref(a: &Int) {
  print(*a, "\n");
}

fn mutate_by_ref(a: &mut Int) {
  *a = 10;
}

fn add(a: Int, b: Int) -> Int {
  return a + b;
}
